#!/bin/bash
mkdir ~/biostudies
# echo 'nohup rclone mount biostudies:biostudies/nfs ~/biostudies --daemon > rclone.log &' >> ~/.bashrc 
nohup rclone mount biostudies:biostudies/nfs ~/biostudies --read-only --daemon </dev/null >/dev/null 2>&1 &
exec "$@"

